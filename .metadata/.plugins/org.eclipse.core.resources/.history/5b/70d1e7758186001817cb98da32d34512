package com.qa.hr;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class AddEmployeePage {

	
	@FindBy (xpath = "//*[@id=\"firstName\"]")
	WebElement firstname;
	
	@FindBy (xpath = "//*[@id=\"middleName\"]")
	WebElement middlename;
	
	@FindBy (xpath ="//*[@id=\"lastName\"]")
	WebElement lastname;
	
	@FindBy (xpath = "//*[@id=\"location_inputfileddiv\"]/div/input")
	WebElement location;
	
	@FindBy (xpath = "//*[@id=\"pimAddEmployeeForm\"]/div[1]/div/materializecss-decorator[3]/div/sf-decorator/div/label" )
	WebElement logindetails;
	
	@FindBy (xpath= "//*[@id=\"username\"]")
	WebElement username;
	
	@FindBy (xpath = "//*[@id=\"password\"]")
	WebElement password;
	
	@FindBy (xpath = "//*[@id=\"confirmPassword\"]")
	WebElement password2;
	
	@FindBy (xpath = "//*[@id=\"essRoleId_inputfileddiv\"]/div/input")
	WebElement defaultrole; 
	
	@FindBy (xpath = "//*[@id=\"supervisorRoleId_inputfileddiv\"]/div/input")
	WebElement defaultrole2;
	
	@FindBy (xpath = "//*[@id=\"adminRoleId_inputfileddiv\"]")
	WebElement admin;
	
	@FindBy (xpath = "//*[@id=\"systemUserSaveBtn\"]")
	WebElement save;
	
	
	public void enterfirstname (String text) {
		firstname.sendKeys("fozia");

	}
	
	public void enterlastname (String text) {
		lastname.sendKeys("khan");
	}
	
	public void selectlocation () {
		location.click();
	}
	
	public void clickcreatelogindetails () {
		logindetails.click();
		
	}
	
	public void enterusername (String text) {
		username.sendKeys("fozia");
	}
	
	public void enterpassword (String text) {
		password.sendKeys("password");
			
	}
	
	public void confirmpassword (String text) {
		password2.sendKeys("password");
	}
	
	public void selectdefaultrole () {
		defaultrole.click();
		
	}
	
	public void selectdefaultrole2 () {
		defaultrole2.click();
	}
	
	public void adminrole () {
		admin.click();
	}
	
	public void clicksave () {
		save.click();
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
